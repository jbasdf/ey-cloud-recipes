check process <%= @worker_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/<%= @worker_name %>.pid
  start program = "/data/<%= @app_name %>/current/script/delayed_job -e <%= @framework_env %> start" as uid <%= @user %> and gid <%= @user %>
  stop program = "/data/<%= @app_name %>/current/script/delayed_job -e <%= @framework_env %> stop" as uid <%= @user %> and gid <%= @user %>
  if totalmem is greater than 300 MB then restart # eating up memory?
  group <%= @app_name %>_jobs