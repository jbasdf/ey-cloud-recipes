check process <%= @worker_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/<%= @worker_name %>.pid
  start program = "RAILS_ENV=production /data/<%= @app_name %>/current/script/delayed_job start" as uid <%= @user %>
  stop program = "RAILS_ENV=production /data/<%= @app_name %>/current/script/delayed_job stop" as uid <%= @user %>
  if totalmem is greater than 300 MB then restart # eating up memory?
  group <%= @app_name %>_jobs
  
  
  